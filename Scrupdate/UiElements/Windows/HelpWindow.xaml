                        <Scrupdate_UiElements_Controls:CustomButton x:Name="button_introductionHelpChapter" Width="auto" Height="30" SnapsToDevicePixels="True" FontSize="20" FontFamily="Calibri" Margin="10 10 10 0" VerticalAlignment="Bottom" Content="Introduction" Click="OnButtonClickEvent">
                            <Scrupdate_UiElements_Controls:CustomButton.Style>
