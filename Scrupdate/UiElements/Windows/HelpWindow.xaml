                        <Scrupdate_UiElements_Controls:CustomButton x:Name="button_tipsHelpChapter" Width="auto" Height="30" SnapsToDevicePixels="True" FontSize="20" FontFamily="Calibri" Margin="10 5 10 0" VerticalAlignment="Bottom" Content="Tips" Click="OnButtonClickEvent">
                            <Scrupdate_UiElements_Controls:CustomButton.Style>
