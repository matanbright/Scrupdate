                            </Scrupdate_UiElements_Controls:CustomButton.Style>
                        </Scrupdate_UiElements_Controls:CustomButton>
                        <Scrupdate_UiElements_Controls:CustomButton x:Name="button_referencesHelpChapter" Width="auto" Height="30" SnapsToDevicePixels="True" FontSize="20" FontFamily="Calibri" Margin="10 5 10 10" VerticalAlignment="Bottom" Content="References" Click="OnButtonClickEvent">
                            <Scrupdate_UiElements_Controls:CustomButton.Style>
                                <Style TargetType="Scrupdate_UiElements_Controls:CustomButton">
                                    <Setter Property="FontWeight" Value="Normal" />
                                    <Setter Property="Foreground" Value="{StaticResource lightBlackSolidColorBrush}" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Scrupdate_UiElements_Windows:HelpWindow}, Path=SelectedHelpChapterMenuTab}" Value="References">
                                            <Setter Property="FontWeight" Value="Bold" />
