<Window x:Class="Scrupdate.UiElements.Windows.ProgramAddingOrEditingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Scrupdate_UiElements_Windows="clr-namespace:Scrupdate.UiElements.Windows"
        xmlns:Scrupdate_UiElements_Controls="clr-namespace:Scrupdate.UiElements.Controls"
        Title="Scrupdate - N/A"
        Width="745"
        Height="717"
        MinWidth="745"
        MinHeight="717"
        MaxWidth="745"
        MaxHeight="717"
        SnapsToDevicePixels="True"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Closing="OnClosingEvent"
        KeyDown="OnKeyDownEvent">
    <Grid x:Name="grid_window"
          SnapsToDevicePixels="False">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid x:Name="grid_windowContent"
              Grid.Row="0"
              Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <Grid x:Name="grid_topWindowContent"
                  Grid.Row="0"
                  Grid.Column="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <ScrollViewer x:Name="scrollViewer_programPropertiesAndUpdateCheckConfiguration"
                              Grid.Row="0"
                              Grid.Column="0"
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Auto"
                              Margin="20 20 20 20">
                    <StackPanel x:Name="stackPanel_programPropertiesAndUpdateCheckConfiguration"
                                Orientation="Vertical">
                        <StackPanel x:Name="stackPanel_programProperties"
                                    Orientation="Vertical"
                                    Margin="0 0 0 10">
                            <Scrupdate_UiElements_Controls:CustomCheckBox x:Name="checkBox_detectAutomatically"
                                                                          IsEnabled="False"
                                                                          Margin="10 10 10 0"
                                                                          HorizontalAlignment="Left"
                                                                          VerticalAlignment="Center"
                                                                          Content="Detect Automatically"
                                                                          Click="OnCheckBoxClickEvent">
                                <Scrupdate_UiElements_Controls:CustomCheckBox.Style>
                                    <Style TargetType="Scrupdate_UiElements_Controls:CustomCheckBox">
                                        <Setter Property="Visibility"
                                                Value="Collapsed" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Scrupdate_UiElements_Windows:ProgramAddingOrEditingWindow}, Path=CurrentWindowVariation}"
                                                         Value="ProgramEditingWindow">
                                                <Setter Property="Visibility"
                                                        Value="Visible" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Scrupdate_UiElements_Controls:CustomCheckBox.Style>
                            </Scrupdate_UiElements_Controls:CustomCheckBox>
                            <StackPanel x:Name="stackPanel_nameField"
                                        Orientation="Horizontal"
                                        Margin="10 10 10 0"
                                        HorizontalAlignment="Left">
                                <StackPanel.Style>
                                    <Style TargetType="StackPanel">
                                        <Setter Property="IsEnabled"
                                                Value="False" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ElementName=checkBox_detectAutomatically, Path=IsChecked}"
                                                         Value="False">
                                                <Setter Property="IsEnabled"
                                                        Value="True" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </StackPanel.Style>
                                <Scrupdate_UiElements_Controls:CustomLabel Padding="0 0 0 0"
                                                                           Margin="0 0 0 0"
                                                                           VerticalAlignment="Center"
                                                                           Content="Name: " />
                                <Scrupdate_UiElements_Controls:CustomTextBox x:Name="textBox_name"
                                                                             Width="350"
                                                                             Margin="10 0 0 0"
                                                                             VerticalAlignment="Center"
                                                                             MaxLength="1000"
                                                                             TextChanged="OnTextBoxTextChangedEvent" />
                            </StackPanel>
                            <StackPanel x:Name="stackPanel_installedForField"
                                        Orientation="Horizontal"
                                        Margin="10 10 10 0"
                                        HorizontalAlignment="Left">
                                <StackPanel.Style>
                                    <Style TargetType="StackPanel">
                                        <Setter Property="IsEnabled"
                                                Value="False" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ElementName=checkBox_detectAutomatically, Path=IsChecked}"
                                                         Value="False">
                                                <Setter Property="IsEnabled"
                                                        Value="True" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </StackPanel.Style>
                                <Scrupdate_UiElements_Controls:CustomLabel Padding="0 0 0 0"
                                                                           Margin="0 0 0 0"
                                                                           VerticalAlignment="Center"
                                                                           Content="Installed For: " />
                                <Scrupdate_UiElements_Controls:CustomComboBox x:Name="comboBox_installedFor"
                                                                              Width="90"
                                                                              Height="20"
                                                                              Margin="10 0 0 0"
                                                                              VerticalAlignment="Center"
                                                                              BorderThickness="1 1 1 1"
                                                                              BorderBrush="{StaticResource lightBlackSolidColorBrush}"
                                                                              PopupBackground="{StaticResource smokeWhiteSolidColorBrush}"
                                                                              SelectionChanged="OnComboBoxSelectionChangedEvent" />
                            </StackPanel>
                            <StackPanel x:Name="stackPanel_installedVersionField"
                                        Orientation="Horizontal"
                                        HorizontalAlignment="Left">
                                <StackPanel.Style>
                                    <Style TargetType="StackPanel">
                                        <Setter Property="IsEnabled"
                                                Value="False" />
                                        <Setter Property="Margin"
                                                Value="10 10 10 0" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ElementName=checkBox_detectAutomatically, Path=IsChecked}"
                                                         Value="False">
                                                <Setter Property="IsEnabled"
                                                        Value="True" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding ElementName=comboBox_installedFor, Path=SelectedIndex}"
                                                         Value="0">
                                                <Setter Property="IsEnabled"
                                                        Value="False" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding ElementName=stackPanel_latestVersionField, Path=Visibility}"
                                                         Value="Collapsed">
                                                <Setter Property="Margin"
                                                        Value="10 10 10 10" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </StackPanel.Style>
                                <Scrupdate_UiElements_Controls:CustomLabel Padding="0 0 0 0"
                                                                           Margin="0 0 0 0"
                                                                           VerticalAlignment="Center"
                                                                           Content="Installed Version: " />
                                <Scrupdate_UiElements_Controls:CustomTextBox x:Name="textBox_installedVersion"
                                                                             Width="150"
                                                                             Margin="10 0 0 0"
                                                                             VerticalAlignment="Center"
                                                                             MaxLength="100"
                                                                             TextChanged="OnTextBoxTextChangedEvent" />
                            </StackPanel>
                            <StackPanel x:Name="stackPanel_latestVersionField"
                                        Orientation="Horizontal"
                                        Margin="10 10 10 10">
                                <StackPanel.Style>
                                    <Style TargetType="StackPanel">
                                        <Setter Property="Visibility"
                                                Value="Collapsed" />
                                        <Style.Triggers>
                                            <MultiDataTrigger>
                                                <MultiDataTrigger.Conditions>
                                                    <Condition Binding="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Scrupdate_UiElements_Windows:ProgramAddingOrEditingWindow}, Path=CurrentWindowVariation}"
                                                               Value="ProgramEditingWindow" />
                                                    <Condition Binding="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Scrupdate_UiElements_Windows:ProgramAddingOrEditingWindow}, Path=LastProgramUpdateCheckConfigurationStatus}"
                                                               Value="Valid" />
                                                </MultiDataTrigger.Conditions>
                                                <Setter Property="Visibility"
                                                        Value="Visible" />
                                            </MultiDataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </StackPanel.Style>
                                <Scrupdate_UiElements_Controls:CustomLabel Padding="0 0 0 0"
                                                                           Margin="0 0 0 0"
                                                                           VerticalAlignment="Center"
                                                                           Content="Latest Version: " />
                                <Scrupdate_UiElements_Controls:CustomLabel x:Name="label_latestVersion"
                                                                           Height="20"
                                                                           Padding="0 0 0 0"
                                                                           Margin="10 0 0 0"
                                                                           VerticalAlignment="Center"
                                                                           Content="Unknown" />
                            </StackPanel>
                        </StackPanel>
                        <Border x:Name="border_programPropertiesAndUpdateCheckConfigurationSeparator"
                                BorderThickness="0 1 0 0"
                                BorderBrush="{StaticResource brightGraySolidColorBrush}"
                                Margin="10 0 10 0" />
                        <StackPanel x:Name="stackPanel_programUpdateCheckConfiguration"
                                    Orientation="Vertical"
                                    Margin="0 10 0 0">
                            <Scrupdate_UiElements_Controls:CustomCheckBox x:Name="checkBox_configureUpdateCheck"
                                                                          Margin="10 10 10 0"
                                                                          HorizontalAlignment="Left"
                                                                          VerticalAlignment="Center"
                                                                          Content="Configure Update Check"
                                                                          Click="OnCheckBoxClickEvent" />
                            <StackPanel x:Name="stackPanel_webpageUrlField"
                                        Orientation="Horizontal"
                                        Margin="35 10 10 0"
                                        HorizontalAlignment="Left">
                                <StackPanel.Style>
                                    <Style TargetType="StackPanel">
                                        <Setter Property="IsEnabled"
                                                Value="False" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ElementName=checkBox_configureUpdateCheck, Path=IsChecked}"
                                                         Value="True">
                                                <Setter Property="IsEnabled"
                                                        Value="True" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </StackPanel.Style>
                                <Scrupdate_UiElements_Controls:CustomLabel Padding="0 0 0 0"
                                                                           Margin="0 0 0 0"
                                                                           VerticalAlignment="Center"
                                                                           Content="Webpage URL: " />
                                <Scrupdate_UiElements_Controls:CustomTextBox x:Name="textBox_webpageUrl"
                                                                             Width="400"
                                                                             Margin="10 0 0 0"
                                                                             VerticalAlignment="Center"
                                                                             MaxLength="50000"
                                                                             TextChanged="OnTextBoxTextChangedEvent" />
                            </StackPanel>
                            <StackPanel x:Name="stackPanel_versionSearchMethodField"
                                        Orientation="Vertical"
                                        Margin="35 10 10 0"
                                        HorizontalAlignment="Left">
                                <StackPanel.Style>
                                    <Style TargetType="StackPanel">
                                        <Setter Property="IsEnabled"
                                                Value="False" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ElementName=checkBox_configureUpdateCheck, Path=IsChecked}"
                                                         Value="True">
                                                <Setter Property="IsEnabled"
                                                        Value="True" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </StackPanel.Style>
                                <Scrupdate_UiElements_Controls:CustomLabel Padding="0 0 0 0"
                                                                           Margin="0 0 0 0"
                                                                           HorizontalAlignment="Left"
                                                                           VerticalAlignment="Center"
                                                                           Content="Version Search Method:" />
                                <Border BorderThickness="1 0 0 0"
                                        Margin="0 5 0 0">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="BorderBrush"
                                                    Value="{StaticResource silverishGraySolidColorBrush}" />
                                            <Style.Triggers>
                                                <Trigger Property="IsEnabled"
                                                         Value="True">
                                                    <Setter Property="BorderBrush"
                                                            Value="{StaticResource graySolidColorBrush}" />
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <StackPanel x:Name="stackPanel_versionSearchMethod"
                                                Orientation="Vertical"
                                                Margin="10 0 0 0"
                                                HorizontalAlignment="Left">
                                        <StackPanel x:Name="stackPanel_searchWithinTheHtmlElementWithIdField"
                                                    Orientation="Horizontal"
                                                    Margin="0 0 0 0"
                                                    HorizontalAlignment="Left">
                                            <Scrupdate_UiElements_Controls:CustomRadioButton x:Name="radioButton_searchWithinTheHtmlElementWithId"
                                                                                             GroupName="versionSearchMethodSelection"
                                                                                             IsChecked="True"
                                                                                             Margin="0 0 0 0"
                                                                                             VerticalAlignment="Center"
                                                                                             Content="Search within the HTML Element with the Following ID: "
                                                                                             Click="OnRadioButtonClickEvent" />
                                            <Scrupdate_UiElements_Controls:CustomTextBox x:Name="textBox_searchWithinTheHtmlElementWithIdParameter"
                                                                                         Width="200"
                                                                                         Margin="10 0 0 0"
                                                                                         VerticalAlignment="Center"
                                                                                         MaxLength="1000"
                                                                                         TextChanged="OnTextBoxTextChangedEvent">
                                                <Scrupdate_UiElements_Controls:CustomTextBox.Style>
                                                    <Style TargetType="Scrupdate_UiElements_Controls:CustomTextBox">
                                                        <Setter Property="IsEnabled"
                                                                Value="False" />
                                                        <Style.Triggers>
                                                            <MultiDataTrigger>
                                                                <MultiDataTrigger.Conditions>
                                                                    <Condition Binding="{Binding ElementName=radioButton_searchWithinTheHtmlElementWithId, Path=IsEnabled}"
                                                                               Value="True" />
                                                                    <Condition Binding="{Binding ElementName=radioButton_searchWithinTheHtmlElementWithId, Path=IsChecked}"
                                                                               Value="True" />
                                                                </MultiDataTrigger.Conditions>
                                                                <Setter Property="IsEnabled"
                                                                        Value="True" />
                                                            </MultiDataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Scrupdate_UiElements_Controls:CustomTextBox.Style>
                                            </Scrupdate_UiElements_Controls:CustomTextBox>
                                        </StackPanel>
                                        <StackPanel x:Name="stackPanel_searchWithinTheHtmlElementsThatMatchXPathField"
                                                    Orientation="Horizontal"
                                                    Margin="0 5 0 0"
                                                    HorizontalAlignment="Left">
                                            <Scrupdate_UiElements_Controls:CustomRadioButton x:Name="radioButton_searchWithinTheHtmlElementsThatMatchXPath"
                                                                                             GroupName="versionSearchMethodSelection"
                                                                                             Margin="0 0 0 0"
                                                                                             VerticalAlignment="Center"
                                                                                             Content="Search within the HTML Element(s) That Match the Following XPath: "
                                                                                             Click="OnRadioButtonClickEvent" />
                                            <Scrupdate_UiElements_Controls:CustomTextBox x:Name="textBox_searchWithinTheHtmlElementsThatMatchXPathParameter"
                                                                                         Width="200"
                                                                                         Margin="10 0 0 0"
                                                                                         VerticalAlignment="Center"
                                                                                         MaxLength="1000"
                                                                                         TextChanged="OnTextBoxTextChangedEvent">
                                                <Scrupdate_UiElements_Controls:CustomTextBox.Style>
                                                    <Style TargetType="Scrupdate_UiElements_Controls:CustomTextBox">
                                                        <Setter Property="IsEnabled"
                                                                Value="False" />
                                                        <Style.Triggers>
                                                            <MultiDataTrigger>
                                                                <MultiDataTrigger.Conditions>
                                                                    <Condition Binding="{Binding ElementName=radioButton_searchWithinTheHtmlElementsThatMatchXPath, Path=IsEnabled}"
                                                                               Value="True" />
                                                                    <Condition Binding="{Binding ElementName=radioButton_searchWithinTheHtmlElementsThatMatchXPath, Path=IsChecked}"
                                                                               Value="True" />
                                                                </MultiDataTrigger.Conditions>
                                                                <Setter Property="IsEnabled"
                                                                        Value="True" />
                                                            </MultiDataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Scrupdate_UiElements_Controls:CustomTextBox.Style>
                                            </Scrupdate_UiElements_Controls:CustomTextBox>
                                        </StackPanel>
                                        <StackPanel x:Name="stackPanel_searchGloballyWithinTheWebpageField"
                                                    Orientation="Vertical"
                                                    Margin="0 5 0 0"
                                                    HorizontalAlignment="Left">
                                            <Scrupdate_UiElements_Controls:CustomRadioButton x:Name="radioButton_searchGloballyWithinTheWebpage"
                                                                                             GroupName="versionSearchMethodSelection"
                                                                                             Margin="0 0 0 0"
                                                                                             HorizontalAlignment="Left"
                                                                                             VerticalAlignment="Center"
                                                                                             Content="Search Globally within the Webpage"
                                                                                             Click="OnRadioButtonClickEvent" />
                                            <StackPanel x:Name="stackPanel_searchFromTextWithinTheWebpageField"
                                                        Orientation="Horizontal"
                                                        Margin="25 5 0 0"
                                                        HorizontalAlignment="Left">
                                                <StackPanel.Style>
                                                    <Style TargetType="StackPanel">
                                                        <Setter Property="IsEnabled"
                                                                Value="False" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding ElementName=radioButton_searchGloballyWithinTheWebpage, Path=IsChecked}"
                                                                         Value="True">
                                                                <Setter Property="IsEnabled"
                                                                        Value="True" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </StackPanel.Style>
                                                <Scrupdate_UiElements_Controls:CustomCheckBox x:Name="checkBox_searchFromTextWithinTheWebpage"
                                                                                              Margin="0 0 0 0"
                                                                                              VerticalAlignment="Center"
                                                                                              Content="Search from the Following Text within the Webpage: "
                                                                                              Click="OnCheckBoxClickEvent" />
                                                <Scrupdate_UiElements_Controls:CustomTextBox x:Name="textBox_searchFromTextWithinTheWebpageParameter"
                                                                                             Width="200"
                                                                                             Margin="10 0 0 0"
                                                                                             VerticalAlignment="Center"
                                                                                             MaxLength="1000"
                                                                                             TextChanged="OnTextBoxTextChangedEvent">
                                                    <Scrupdate_UiElements_Controls:CustomTextBox.Style>
                                                        <Style TargetType="Scrupdate_UiElements_Controls:CustomTextBox">
                                                            <Setter Property="IsEnabled"
                                                                    Value="False" />
                                                            <Style.Triggers>
                                                                <MultiDataTrigger>
                                                                    <MultiDataTrigger.Conditions>
                                                                        <Condition Binding="{Binding ElementName=checkBox_searchFromTextWithinTheWebpage, Path=IsEnabled}"
                                                                                   Value="True" />
                                                                        <Condition Binding="{Binding ElementName=checkBox_searchFromTextWithinTheWebpage, Path=IsChecked}"
                                                                                   Value="True" />
                                                                    </MultiDataTrigger.Conditions>
                                                                    <Setter Property="IsEnabled"
                                                                            Value="True" />
                                                                </MultiDataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Scrupdate_UiElements_Controls:CustomTextBox.Style>
                                                </Scrupdate_UiElements_Controls:CustomTextBox>
                                            </StackPanel>
                                            <StackPanel x:Name="stackPanel_searchUntilTextWithinTheWebpageField"
                                                        Orientation="Horizontal"
                                                        Margin="25 5 0 0"
                                                        HorizontalAlignment="Left">
                                                <StackPanel.Style>
                                                    <Style TargetType="StackPanel">
                                                        <Setter Property="IsEnabled"
                                                                Value="False" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding ElementName=radioButton_searchGloballyWithinTheWebpage, Path=IsChecked}"
                                                                         Value="True">
                                                                <Setter Property="IsEnabled"
                                                                        Value="True" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </StackPanel.Style>
                                                <Scrupdate_UiElements_Controls:CustomCheckBox x:Name="checkBox_searchUntilTextWithinTheWebpage"
                                                                                              Margin="0 0 0 0"
                                                                                              VerticalAlignment="Center"
                                                                                              Content="Search until the Following Text within the Webpage: "
                                                                                              Click="OnCheckBoxClickEvent" />
                                                <Scrupdate_UiElements_Controls:CustomTextBox x:Name="textBox_searchUntilTextWithinTheWebpageParameter"
                                                                                             Width="200"
                                                                                             Margin="10 0 0 0"
                                                                                             VerticalAlignment="Center"
                                                                                             MaxLength="1000"
                                                                                             TextChanged="OnTextBoxTextChangedEvent">
                                                    <Scrupdate_UiElements_Controls:CustomTextBox.Style>
                                                        <Style TargetType="Scrupdate_UiElements_Controls:CustomTextBox">
                                                            <Setter Property="IsEnabled"
                                                                    Value="False" />
                                                            <Style.Triggers>
                                                                <MultiDataTrigger>
                                                                    <MultiDataTrigger.Conditions>
                                                                        <Condition Binding="{Binding ElementName=checkBox_searchUntilTextWithinTheWebpage, Path=IsEnabled}"
                                                                                   Value="True" />
                                                                        <Condition Binding="{Binding ElementName=checkBox_searchUntilTextWithinTheWebpage, Path=IsChecked}"
                                                                                   Value="True" />
                                                                    </MultiDataTrigger.Conditions>
                                                                    <Setter Property="IsEnabled"
                                                                            Value="True" />
                                                                </MultiDataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Scrupdate_UiElements_Controls:CustomTextBox.Style>
                                                </Scrupdate_UiElements_Controls:CustomTextBox>
                                            </StackPanel>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                            <StackPanel x:Name="stackPanel_versionSearchOptionsField"
                                        Orientation="Vertical"
                                        Margin="35 10 10 0"
                                        HorizontalAlignment="Left">
                                <StackPanel.Style>
                                    <Style TargetType="StackPanel">
                                        <Setter Property="IsEnabled"
                                                Value="False" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ElementName=checkBox_configureUpdateCheck, Path=IsChecked}"
                                                         Value="True">
                                                <Setter Property="IsEnabled"
                                                        Value="True" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </StackPanel.Style>
                                <Scrupdate_UiElements_Controls:CustomLabel Padding="0 0 0 0"
                                                                           Margin="0 0 0 0"
                                                                           HorizontalAlignment="Left"
                                                                           VerticalAlignment="Center"
                                                                           Content="Version Search Options:" />
                                <Border BorderThickness="1 0 0 0"
                                        Margin="0 5 0 0">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="BorderBrush"
                                                    Value="{StaticResource silverishGraySolidColorBrush}" />
                                            <Style.Triggers>
                                                <Trigger Property="IsEnabled"
                                                         Value="True">
                                                    <Setter Property="BorderBrush"
                                                            Value="{StaticResource graySolidColorBrush}" />
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <StackPanel x:Name="stackPanel_versionSearchOptions"
                                                Orientation="Vertical"
                                                Margin="10 0 0 0"
                                                HorizontalAlignment="Left">
                                        <Scrupdate_UiElements_Controls:CustomCheckBox x:Name="checkBox_treatAStandaloneNumberAsAVersion"
                                                                                      Margin="0 0 0 0"
                                                                                      HorizontalAlignment="Left"
                                                                                      VerticalAlignment="Center"
                                                                                      Content="Treat a Standalone Number as a Version" />
                                        <StackPanel x:Name="stackPanel_versionSearchBehaviorField"
                                                    Orientation="Vertical"
                                                    Margin="0 5 0 0"
                                                    HorizontalAlignment="Left">
                                            <Scrupdate_UiElements_Controls:CustomLabel Padding="0 0 0 0"
                                                                                       Margin="0 0 0 0"
                                                                                       HorizontalAlignment="Left"
                                                                                       VerticalAlignment="Center"
                                                                                       Content="Version Search Behavior:" />
                                            <Border BorderThickness="1 0 0 0"
                                                    Margin="0 5 0 0">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="BorderBrush"
                                                                Value="{StaticResource silverishGraySolidColorBrush}" />
                                                        <Style.Triggers>
                                                            <Trigger Property="IsEnabled"
                                                                     Value="True">
                                                                <Setter Property="BorderBrush"
                                                                        Value="{StaticResource graySolidColorBrush}" />
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <StackPanel x:Name="stackPanel_versionSearchBehavior"
                                                            Orientation="Vertical"
                                                            Margin="10 0 0 0"
                                                            HorizontalAlignment="Left">
                                                    <Scrupdate_UiElements_Controls:CustomRadioButton x:Name="radioButton_getTheFirstVersionThatIsFound"
                                                                                                     GroupName="versionSearchBehaviorSelection"
                                                                                                     IsChecked="True"
                                                                                                     Margin="0 0 0 0"
                                                                                                     HorizontalAlignment="Left"
                                                                                                     VerticalAlignment="Center"
                                                                                                     Content="Get the First Version That Is Found" />
                                                    <Scrupdate_UiElements_Controls:CustomRadioButton x:Name="radioButton_getTheFirstVersionThatIsFoundFromTheEnd"
                                                                                                     GroupName="versionSearchBehaviorSelection"
                                                                                                     Margin="0 5 0 0"
                                                                                                     HorizontalAlignment="Left"
                                                                                                     VerticalAlignment="Center"
                                                                                                     Content="Get the First Version That Is Found from the End" />
                                                    <Scrupdate_UiElements_Controls:CustomRadioButton x:Name="radioButton_getTheLatestVersionFromAllTheVersionsThatAreFound"
                                                                                                     GroupName="versionSearchBehaviorSelection"
                                                                                                     Margin="0 5 0 0"
                                                                                                     HorizontalAlignment="Left"
                                                                                                     VerticalAlignment="Center"
                                                                                                     Content="Get the Latest Version from All the Versions That Are Found" />
                                                </StackPanel>
                                            </Border>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                            <StackPanel x:Name="stackPanel_advancedOptionsField"
                                        Orientation="Vertical"
                                        Margin="35 10 10 0"
                                        HorizontalAlignment="Left">
                                <StackPanel.Style>
                                    <Style TargetType="StackPanel">
                                        <Setter Property="IsEnabled"
                                                Value="False" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ElementName=checkBox_configureUpdateCheck, Path=IsChecked}"
                                                         Value="True">
                                                <Setter Property="IsEnabled"
                                                        Value="True" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </StackPanel.Style>
                                <Scrupdate_UiElements_Controls:CustomExpander x:Name="expander_advancedOptions"
                                                                              Padding="0 0 0 0"
                                                                              Margin="0 0 0 0"
                                                                              HorizontalAlignment="Left"
                                                                              VerticalAlignment="Center">
                                    <Scrupdate_UiElements_Controls:CustomExpander.Style>
